#
# SwiftFormat configuration file commonly used in STRV (v 0.1)
# https://github.com/nicklockwood/SwiftFormat
# 
# Feel free to send pull request or suggest improvements!
# 
# To run this only go to terminal swiftformat .
# 

# format options
--allman false
#--commas inline
#--patternlet inline
#--closingparen same-line

# file options
--exclude vendor,Pods,**/*generated.swift,**/fastlane, **/API.swift, build, Assets.swift, Fonts.swift, Strings.swift, BarrysXWatch-Extension/Application/Resources

# rules
--disable blankLinesAroundMark,trailingCommas,blankLinesAtStartOfScope,preferKeyPath, redundantReturn, redundantSelf, unusedArguments, wrapEnumCases, wrapMultilineStatementBraces, wrapSwitchCases, redundantLetError, hoistPatternLet, sortedImports
